<?xml version="1.0" encoding="utf-8"?><!-- HEADER WITH TEXT, ICON and CROSS BUTTON -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00adf2">

    <ImageView
        android:id="@+id/snooze_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="41dp"
        android:src="@drawable/transaction_successful"
        android:visibility="gone" />

    <TextView
        android:id="@+id/snooze_header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snooze_status_icon"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="22dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/cb_try_later"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_cancel_snooze_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="\u00D7"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

</RelativeLayout><!-- HEADER ENDS -->
