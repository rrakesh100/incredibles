<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pptextview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_15dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_15dp">


    <TextView
        android:id="@+id/dual_btn_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/label_auto_load_eligibility_desc"
        android:textColor="@color/payumoney_black"
        android:textSize="@dimen/dimen_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dual_btn_dialog_btn_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/bg_rounded_disable"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_12dp"
            android:paddingLeft="@dimen/dimen_30dp"
            android:paddingRight="@dimen/dimen_30dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:text="@string/btn_cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_18sp" />


        <com.payumoney.sdkui.ui.widgets.CustomDrawableTextView
            android:id="@+id/dual_btn_dialog_btn_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_12dp"
            android:paddingLeft="@dimen/dimen_25dp"
            android:paddingRight="@dimen/dimen_25dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:text="@string/btn_continue"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_18sp"
            pptextview:bgColor="?attr/colorPrimary"
            pptextview:borderOnly="false" />

    </LinearLayout>
</LinearLayout>