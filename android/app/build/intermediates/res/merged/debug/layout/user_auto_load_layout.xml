<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setup_autoLoad_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:background="@color/card_bg_color"
    android:clickable="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/autoLoad_banner_image"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_auto_load_logo" />

    <RelativeLayout
        android:id="@+id/setup_auto_load_layout_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/autoLoad_banner_image"
        android:layout_toRightOf="@+id/autoLoad_banner_image"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_toLeftOf="@+id/img_proceed_auto_load"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_autoLoad_setup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_setup_autoload"
                android:textColor="@color/payumoney_black"
                android:textSize="@dimen/dimen_17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_autoLoad_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="@string/label_setup_auto_load_desc_off"
                android:textColor="@color/payumoney_black"
                android:textSize="@dimen/dimen_15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_proceed_auto_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_img_autoload_proceed" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_auto_load_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:layout_toEndOf="@+id/autoLoad_banner_image"
        android:layout_toRightOf="@+id/autoLoad_banner_image" />

</RelativeLayout>