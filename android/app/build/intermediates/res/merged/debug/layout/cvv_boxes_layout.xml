<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txt_layout_otp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_30dp"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <com.payumoney.sdkui.ui.widgets.OtpEditText
        android:id="@+id/otpEdit_box1"
        style="@style/OtpEditTextStyle"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/edit_bg_white"
        android:imeActionId="@+id/otpEdit_box2"
        android:imeOptions="actionNext"
        android:maxLength="2"
        android:nextFocusRight="@id/otpEdit_box2"
        android:tag="1"
        android:theme="@style/OtpEditTextLineColor">

        <requestFocus />
    </com.payumoney.sdkui.ui.widgets.OtpEditText>

    <com.payumoney.sdkui.ui.widgets.OtpEditText
        android:id="@+id/otpEdit_box2"
        style="@style/OtpEditTextStyle"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/edit_bg_white"
        android:imeActionId="@+id/otpEdit_box3"
        android:imeOptions="actionNext"
        android:maxLength="2"
        android:nextFocusLeft="@id/otpEdit_box1"
        android:nextFocusRight="@id/otpEdit_box3"
        android:tag="2"
        android:theme="@style/OtpEditTextLineColor" />

    <com.payumoney.sdkui.ui.widgets.OtpEditText
        android:id="@+id/otpEdit_box3"
        style="@style/OtpEditTextStyle"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/edit_bg_white"
        android:imeActionId="@+id/otpEdit_box4"
        android:imeOptions="actionNext"
        android:maxLength="2"
        android:nextFocusLeft="@id/otpEdit_box2"
        android:nextFocusRight="@id/otpEdit_box4"
        android:tag="3"
        android:theme="@style/OtpEditTextLineColor" />

    <com.payumoney.sdkui.ui.widgets.OtpEditText
        android:id="@+id/otpEdit_box4"
        style="@style/OtpEditTextStyle"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:background="@drawable/edit_bg_white"
        android:imeOptions="actionDone"
        android:maxLength="2"
        android:nextFocusLeft="@id/otpEdit_box3"
        android:tag="4"
        android:theme="@style/OtpEditTextLineColor" />
</LinearLayout>