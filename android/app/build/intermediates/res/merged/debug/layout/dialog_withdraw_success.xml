<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pptextview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_15dp"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_15dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/withdraw_success_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/label_withdraw_success_header"
        android:textColor="@color/payumoney_black"
        android:textSize="@dimen/dimen_20sp" />

    <ImageView
        android:id="@+id/img_success_icon"
        android:layout_width="@dimen/dimen_85dp"
        android:layout_height="@dimen/dimen_85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:src="@drawable/ic_check_circle_black_48dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/msg_withdraw_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/message_withdraw_success"
        android:textSize="@dimen/dimen_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:gravity="center_horizontal">


        <com.payumoney.sdkui.ui.widgets.CustomDrawableTextView
            android:id="@+id/btn_ok_withdraw_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_12dp"
            android:paddingLeft="@dimen/dimen_30dp"
            android:paddingRight="@dimen/dimen_30dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:text="@string/btn_ok"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_18sp"
            pptextview:bgColor="?attr/colorPrimary"
            pptextview:borderOnly="false" />

    </LinearLayout>
</LinearLayout>