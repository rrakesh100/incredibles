<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:pptextview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_5dp"
    app:cardBackgroundColor="@color/payumoney_white"
    app:cardCornerRadius="@dimen/dimen_10dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/dimen_5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_auto_load_eligibility"
            android:textSize="@dimen/dimen_18sp" />

        <TextView
            android:id="@+id/label_auto_load_eligibility_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center_horizontal"
            android:text="@string/label_auto_load_eligibility_desc"
            android:textSize="@dimen/dimen_14sp" />


        <com.payumoney.sdkui.ui.widgets.CustomDrawableTextView
            android:id="@+id/btn_ok_auto_load_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_40dp"
            android:paddingRight="@dimen/dimen_40dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:text="@string/btn_ok"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_16sp"
            pptextview:bgColor="?attr/colorPrimary"
            pptextview:borderOnly="false" />

    </LinearLayout>
</android.support.v7.widget.CardView>