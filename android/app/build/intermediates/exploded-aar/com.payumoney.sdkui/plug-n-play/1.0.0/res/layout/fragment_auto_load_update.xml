<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pptextview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.citruspay.sdkui.ui.fragments.AutoLoadUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/payumoney_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/payumoney_white"
            android:padding="@dimen/dimen_20dp">


            <TextView
                android:id="@+id/btn_change_card_auto_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:text="@string/label_change_card_auto_load"
                android:textColor="?attr/colorPrimary" />

            <include
                layout="@layout/saved_card_item_manage_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_change_card_auto_load"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_20dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/auto_load_update_bg_color"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_default_auto_load_amount"
                android:textColor="@color/payumoney_color_withdraw_label_dark"
                android:textSize="@dimen/dimen_15sp" />

            <com.payumoney.sdkui.ui.widgets.PrefixEditText
                android:id="@+id/edt_auto_load_threshold_amount"
                style="@style/WithDrawMoneyEditFields"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:digits="0123456789"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="@integer/int_1"
                android:textColor="@color/light_gray"
                app:prefix_color="@color/light_gray"
                app:prefix_string="@string/rs_symbol" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="@string/label_update_auto_load_threshold_amount"
                android:textColor="@color/payumoney_color_withdraw_label_dark"
                android:textSize="@dimen/dimen_15sp" />

            <com.payumoney.sdkui.ui.widgets.PrefixEditText
                android:id="@+id/edt_auto_load_load_amount"
                style="@style/WithDrawMoneyEditFields"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:digits="0123456789"
                android:enabled="false"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="@integer/int_1"
                android:textColor="@color/light_gray"
                app:prefix_color="@color/light_gray"
                app:prefix_string="@string/rs_symbol" />

            <com.payumoney.sdkui.ui.widgets.CustomDrawableTextView
                android:id="@+id/btn_edt_autoload_limits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="@string/label_edt_autoload_limits"
                android:textColor="@color/payumoney_white"
                android:textSize="@dimen/dimen_16sp"
                pptextview:bgColor="?attr/colorPrimary"
                pptextview:borderOnly="false" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
