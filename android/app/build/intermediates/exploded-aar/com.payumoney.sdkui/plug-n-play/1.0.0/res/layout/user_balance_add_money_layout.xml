<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pptextview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:background="@color/payumoney_white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_citrus_wallet_balance"
        android:textColor="@color/payumoney_black"
        android:textSize="@dimen/dimen_15sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp">

        <TextView
            android:id="@+id/userBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:layout_marginStart="@dimen/dimen_2dp"
            android:text="@string/rs_balance"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_25sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/balance_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/userBalance"
            android:layout_alignTop="@+id/userBalance" />

    </RelativeLayout>

    <com.payumoney.sdkui.ui.widgets.CustomDrawableTextView
        android:id="@+id/btn_proceed_add_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="@string/btn_add_money"
        android:textColor="@color/payumoney_white"
        android:textSize="@dimen/dimen_16sp"
        pptextview:bgColor="?attr/colorPrimary"
        pptextview:borderOnly="false" />

</LinearLayout>