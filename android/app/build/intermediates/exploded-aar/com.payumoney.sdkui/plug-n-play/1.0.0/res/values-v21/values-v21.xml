<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/payumoney_accent</item>
        <item name="android:textColorPrimary">@color/payumoney_text_color</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/payumoney_white</item>
    </style>
    <style name="EditTextLineColor">
        <item name="colorControlActivated">@color/payumoney_text_color</item>
        <item name="colorControlNormal">@color/app_primary_text_disabled_material_light</item>
    </style>
    <style name="Local_Base.Theme.AppCompat.Dialog" parent="Base.V21.Theme.AppCompat.Dialog"/>
    <style name="OtpEditTextLineColor">
        <item name="colorControlActivated">@color/payumoney_text_color</item>
        <item name="colorControlNormal">@color/app_primary_text_disabled_material_light</item>
    </style>
    <style name="Payumoney.AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/payumoney_primary</item>
        <item name="colorPrimaryDark">@color/payumoney_primary_dark</item>
        <item name="colorAccent">@color/payumoney_accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorButtonNormal">@color/payumoney_primary</item>
        <!-- android:textColorPrimary is the  color of the title text
       in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/app_abc_primary_text_material_light</item>
        <!--This is to enable disable Text capitalisation all over APP-->
        <!-- <item name="textAllCaps">false</item>-->
        <!-- android:textColorPrimaryInverse is the  color of the title
             text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <item name="android:textColorPrimaryInverse">@color/payumoney_white</item>
    </style>
    <style name="PayumoneyAppTheme" parent="Payumoney.AppTheme.Base">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>