<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:id="@+id/r_amount_layout"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/quick_pay_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_alignParentLeft="true"
            android:text="@string/quick_pay_amount"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_28sp"
            android:visibility="visible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:padding="@dimen/dimen_5dp"
            android:textColor="?attr/colorPrimary"
            android:text="Details"
            android:id="@+id/show_button" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/l_convenience_fee"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_35dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/payumoney_amount"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/subtotal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:textSize="@dimen/dimen_18sp"
            android:visibility="visible"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/quick_pay_amount"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_centerVertical="true"
            android:id="@+id/subtotal_amount" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/payumoney_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/convenience_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_18sp"
            android:text="Convenience Fee:"
            android:visibility="visible"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/quick_pay_amount"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/convenience_fee_amount" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/dimen_18sp"
            android:text="Total:"
            android:visibility="visible"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/quick_pay_amount"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_centerVertical="true"
            android:id="@+id/total_amount" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Less Details"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/dimen_2dp"
        android:padding="@dimen/dimen_5dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:textColor="?attr/colorPrimary"
        android:id="@+id/hide_button"
       />
</LinearLayout>
        </LinearLayout>
</LinearLayout>