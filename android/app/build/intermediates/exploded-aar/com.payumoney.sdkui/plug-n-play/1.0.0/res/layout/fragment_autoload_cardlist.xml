<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payumoney_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/auto_load_eligible_cards_banner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/opaque_black"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/label_eligible_cards_banner_1"
                android:textColor="@color/payumoney_white" />

            <TextView
                android:id="@+id/auto_load_eligible_cards_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/label_eligible_cards_banner_2"
                android:textColor="@color/payumoney_white" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/autoLoad_card_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/citrus_promo_banner_layout"
            android:layout_below="@+id/auto_load_eligible_cards_banner_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_15dp" />

        <LinearLayout
            android:id="@+id/citrus_promo_banner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/payumoney_white"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/citrus_promo_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>